<?xml version="1.0"?>
<schema version="0.3">
  <table name="ibank_transfers">
    <field name="transfer_id" type="I" size="11">
      <KEY/>
      <AUTOINCREMENT/>
    </field>
    <field name="source_id" type="I" size="11">
      <NOTNULL/>
      <DEFAULT value="0"/>
    </field>
    <field name="dest_id" type="I" size="11">
      <NOTNULL/>
      <DEFAULT value="0"/>
    </field>
    <field name="time" type="T"/>
    <field name="amount" type="I" size="20">
      <NOTNULL/>
      <DEFAULT value="0"/>
    </field>
    <index name="amount">
      <col>amount</col>
    </index>
  </table>
</schema>
