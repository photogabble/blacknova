<?xml version="1.0"?>
<schema version="0.2">
    <table name="messages">
        <field name="message_id" type="I4">
            <key/>
            <autoincrement/>
            <notnull/>
        </field>
        <field name="sender_id" type="I2"><notnull/><default value="0"/></field>
        <field name="recp_id" type="I2"><notnull/><default value="0"/></field>
        <field name="subject" type="C" size="255"><notnull/><default value="0"/></field>
        <field name="sent" type="C" size="20"></field>
        <field name="message" type="X"><notnull/></field>
        <field name="notified" type="C" size="1"><notnull/><default value="N"/></field>
        <index name="recp_id">
            <col>recp_id</col>
        </index>
    </table>
</schema>
