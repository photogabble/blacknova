<?xml version="1.0"?>
<schema version="0.3">
  <table name="messages">
    <field name="ID" type="I" size="11">
      <KEY/>
      <AUTOINCREMENT/>
    </field>
    <field name="sender_id" type="I" size="11">
      <NOTNULL/>
      <DEFAULT value="0"/>
    </field>
    <field name="recp_id" type="I" size="11">
      <NOTNULL/>
      <DEFAULT value="0"/>
    </field>
    <field name="subject" type="C" size="250"/>
    <field name="sent" type="C" size="19"/>
    <field name="message" type="X">
      <NOTNULL/>
    </field>
    <field name="notified" type="C" size="1">
      <NOTNULL/>
      <DEFAULT value="N"/>
    </field>
  </table>
</schema>
