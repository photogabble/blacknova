<?xml version="1.0"?>
<schema version="0.2">
    <table name="planet_log">
        <field name="planetlog_id" type="I4">
            <key/>
            <autoincrement/>
        </field>
        <field name="planet_id" type="I4"><default value="0"/></field>
        <field name="player_id" type="I2"><notnull/><default value="0"/></field>
        <field name="owner_id" type="I2"><notnull/><default value="0"/></field>
        <field name="action" type="I1"><notnull/><default value="0"/></field>
        <field name="time" type="T"></field>
        <index name="planet_log_planet_id">
            <col>planet_id</col>
        </index>
        <index name="planet_log_player_id">
            <col>player_id</col>
        </index>
        <index name="planet_log_owner_id">
            <col>owner_id</col>
        </index>
        <index name="planet_log_action">
            <col>action</col>
        </index>
        <index name="planet_log_time">
            <col>time</col>
        </index>
    </table>
</schema>
