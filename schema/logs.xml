<?xml version="1.0"?>
<schema version="0.2">
    <table name="logs">
        <desc>Log for player, admin, and debug info</desc>
        <field name="log_id" type="I4">
            <key/>
            <autoincrement/>
        </field>
        <field name="player_id" type="I2"><notnull/><default value="0"/></field>
        <field name="type" type="C" size="40"><notnull/><default value="LOG_RAW"/></field>
        <field name="log_time" type="T"></field>
        <field name="log_data" type="X"></field>
        <index name="logs_player_id">
            <col>player_id</col>
        </index>
    </table>
</schema>
