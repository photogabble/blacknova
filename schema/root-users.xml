<?xml version="1.0"?>
<schema version="0.2">
    <table name="users">
        <field name="account_id" type="I4">
            <key/>
            <autoincrement/>
        </field>
        <field name="email" type="X"><notnull/></field>
        <field name="password" type="C" size="64"><notnull/></field>
        <field name="c_code" type="C" size="8"><notnull/></field>
        <field name="active" type="C" size="1"><notnull/><default value="N"/></field>
        <field name="override_gravatar" type="C" size="1"><notnull/><default value="N"/></field>
        <field name="notes"  type="X"></field>
        <index name="users_password">
            <col>password</col>
        </index>
    </table>
</schema>
