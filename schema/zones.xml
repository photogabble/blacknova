<?xml version="1.0"?>
<schema version="0.2">
    <table name="zones">
        <field name="zone_id" type="I4">
            <key/>
            <autoincrement/>
        </field>
        <field name="zone_name" type="C" size="40"></field>
        <field name="owner" type="I2"><notnull/><default value="0"/></field>
        <field name="team_zone" type="C" size="1"><default value="N"/><notnull/></field>
        <field name="allow_attack" type="C" size="1"><default value="Y"/><notnull/></field>
        <field name="allow_planetattack" type="C" size="1"><default value="Y"/><notnull/></field>
        <field name="allow_warpedit" type="C" size="1"><default value="Y"/><notnull/></field>
        <field name="allow_planet" type="C" size="1"><default value="Y"/><notnull/></field>
        <field name="allow_trade" type="C" size="1"><default value="Y"/><notnull/></field>
        <field name="allow_defenses" type="C" size="1"><default value="Y"/><notnull/></field>
        <field name="max_level" type="I1"><default value="0"/><notnull/></field>
        <index name="owner">
            <col>owner</col>
        </index>
        <index name="team_zone">
            <col>team_zone</col>
        </index>
    </table>
</schema>
