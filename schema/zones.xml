<?xml version="1.0"?>
<schema version="0.3">
  <table name="zones">
    <field name="zone_id" type="I" size="10">
      <KEY/>
      <AUTOINCREMENT/>
      <UNSIGNED/>
    </field>
    <field name="zone_name" type="C" size="40"/>
    <field name="owner" type="I" size="10">
      <NOTNULL/>
      <DEFAULT value="0"/>
      <UNSIGNED/>
    </field>
    <field name="corp_zone" type="C" size="1">
      <NOTNULL/>
      <DEFAULT value="N"/>
    </field>
    <field name="allow_beacon" type="C" size="1">
      <NOTNULL/>
      <DEFAULT value="Y"/>
    </field>
    <field name="allow_attack" type="C" size="1">
      <NOTNULL/>
      <DEFAULT value="Y"/>
    </field>
    <field name="allow_planetattack" type="C" size="1">
      <NOTNULL/>
      <DEFAULT value="Y"/>
    </field>
    <field name="allow_warpedit" type="C" size="1">
      <NOTNULL/>
      <DEFAULT value="Y"/>
    </field>
    <field name="allow_planet" type="C" size="1">
      <NOTNULL/>
      <DEFAULT value="Y"/>
    </field>
    <field name="allow_trade" type="C" size="1">
      <NOTNULL/>
      <DEFAULT value="Y"/>
    </field>
    <field name="allow_defenses" type="C" size="1">
      <NOTNULL/>
      <DEFAULT value="Y"/>
    </field>
    <field name="max_hull" type="I" size="11">
      <NOTNULL/>
      <DEFAULT value="0"/>
    </field>
    <index name="zone_id">
      <col>zone_id</col>
    </index>
  </table>
</schema>
